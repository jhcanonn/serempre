{% extends "base.twig" %}

{% block content %}
<div class="d-flex justify-content-center align-items-center h-100 login-bkg">
	<form action="App/Controllers/HandlerController.php" method="post" class="login-box" id="login">
		<div id="login-msg" class="alert" role="alert"></div>
		<input type="hidden" name="method" value="">
		<div class="d-flex justify-content-center">
			<img src="App/Views/img/img-login.png">
		</div>
		<br>
		<div class="form-group">
		    <label for="username" class="text-white font-weight-bold">Username</label>
		    <input type="text" class="form-control" id="username" placeholder="Username" name="username">
		</div>
		<div class="form-group">
		    <label for="password" class="text-white font-weight-bold">Password</label>
		    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
		</div>
		<div class="d-flex justify-content-around">
			<button type="button" class="btn btn-primary" id="singin">Singin</button>
			<button type="button" class="btn btn-primary" id="singup">Singup</button>
		</div>
	</form>
</div>
{% endblock %}