{% extends "base.twig" %}

{% block extras %}
    {% include 'navbar.twig' %}
    {% include 'notification.twig' %}
	{% include 'modalAddClient.twig' %}
{% endblock %}

{% block content %}
<br><br>
<div class="container">
	<table id="clients" class="table table-striped table-bordered nowrap w-100">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in data.clients %}
                <tr data-client-id="{{ client.id|e }}">
                    <td>{{ client.code|e }}</td>
                    <td>{{ client.name_client|e }}</td>
                    <td>{{ client.name_city|e }}</td>
                    <td>
                        <a class="edit"><i class="fas fa-lg fa-edit green-text"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;<a class="delete"><i class="fas fa-lg fa-trash-alt red-text"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <br>
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addClient" id="add-client">Add client</button>
    </div>
</div>
{% endblock %}