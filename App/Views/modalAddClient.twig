<div class="modal fade" id="addClient" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create client</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="App/Controllers/HandlerController.php" method="post" id="form-client">
            <input id="action-client" type="hidden" name="method" value=""> <!-- create_client or edit_client -->
            <input id="id" type="hidden" name="id" value="">
            <div class="form-group">
                <label for="code" class="font-weight-bold">Code</label>
                <input type="text" class="form-control" id="code" placeholder="Code" name="code">
            </div>
            <div class="form-group">
                <label for="name" class="font-weight-bold">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Name" name="name">
            </div>
            <div class="form-group">
                <label for="city" class="font-weight-bold">City</label>
                <select class="custom-select" id="city" name="city">
                    <option value="" selected="selected">Select</option>
                    {% for city in data.cities %}
                        <option value="{{ city.id|e }}">{{ city.name|e }}</option>
                    {% endfor %}
                </select>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-md btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-md btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>